{
  "hosting": {
    "public": "./.nuxt/dist",
    "ignore": [
      "firebase.json",
      "database-rules.json",
      "storage.rules",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
